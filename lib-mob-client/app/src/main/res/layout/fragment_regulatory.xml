<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="313dp"
        android:layout_height="363dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/infmapimg"
                android:layout_width="56dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/files" />

            <Button
                android:id="@+id/infmapbtn"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF82B1FF"
                android:text="Информационные карты" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/inflistimg"
                android:layout_width="56dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/files" />

            <Button
                android:id="@+id/inflistbtn"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF82B1FF"
                android:text="Информационные листки" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/blinimg"
                android:layout_width="56dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/files" />

            <Button
                android:id="@+id/blinbtn"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF82B1FF"
                android:text="Бюллетени технических новшеств" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ilimg"
                android:layout_width="56dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/files" />

            <Button
                android:id="@+id/ilbtn"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF82B1FF"
                android:text="Иллюстрированные альбомы и плакаты" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/primg"
                android:layout_width="56dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/files" />

            <Button
                android:id="@+id/prbtn"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF82B1FF"
                android:text="Статьи из переодических изданий" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bookimg"
                android:layout_width="56dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/files" />

            <Button
                android:id="@+id/bookbtn"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF82B1FF"
                android:text="Книги и учебники" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/learnimg"
                android:layout_width="56dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/files" />

            <Button
                android:id="@+id/learnbtn"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF82B1FF"
                android:text="Учебно-методически пособия" />
        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fieldHeader1"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="№ п/п"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fieldValue1"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_white"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fieldHeader2"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="НТИ НЖС"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fieldValue2"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_white"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fieldHeader3"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="Курирующие подразделения"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fieldValue3"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_white"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fieldHeader4"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="Филиал"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fieldValue4"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_white"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fieldHeader5"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="План"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fieldValue5"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_white"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fieldHeader6"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="Факт"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fieldValue6"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_white"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
